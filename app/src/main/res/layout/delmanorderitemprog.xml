<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="5dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="orderid"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#696969"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/Showroom_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Showroom Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#696969"
                    android:textSize="14sp"
                    android:layout_below="@+id/order_id"/>
                <TextView
                    android:id="@+id/showroom_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="showroom address"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    android:layout_below="@+id/Showroom_name"/>
                <TextView
                    android:id="@+id/showroom_mobno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="showroom mobno"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/showroom_address"/>
                <TextView
                    android:id="@+id/customername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="customer name"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    android:layout_below="@+id/showroom_mobno"/>



                <TextView
                    android:id="@+id/customermobileno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="customer mobno"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    android:layout_below="@+id/customername"/>

                <TextView
                    android:id="@+id/delivery_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delivery address"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    android:layout_below="@+id/customermobileno"/>

                <TextView
                    android:id="@+id/product_purchage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="product purchage"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    android:layout_below="@+id/delivery_address"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/product_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="product free"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    android:layout_below="@+id/product_purchage"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="total price"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    android:layout_below="@+id/product_free"/>

                <TextView
                    android:id="@+id/complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_below="@+id/totalprice"
                    android:visibility="gone"/>

            </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
